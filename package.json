{
  "name": "todo-pissed",
  "version": "1.0.0",
  "description": "simple javascript todo list",
  "main": "index.js",
  "scripts": {
    "serve": "browser-sync start --server --files 'index.html, src/*'",
    "sass": "node-sass sass/main.scss src/style.css",
    "watch:css": "onchange \"sass/\" -- yarn run sass",
    "start": "run-p serve watch:css"
  },
  "author": "Tyler Martin",
  "license": "MIT",
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "browser-sync": "^2.27.7",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  }
}
